<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#bdbdbd</item>
        <item name="colorPrimaryDark">#9e9e9e</item>
        <item name="colorAccent">@color/accent</item>
    </style>
    <!-- bottom navigation bar style -->
    <style name="ThemeOverlay.Shrine.BottomNavigation" parent="">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Tab text size -->
    <style name="CustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
    </style>

    <dimen name="design_fab_size_mini">48dp</dimen>
    <dimen name="design_fab_size_normal">72dp</dimen>


</resources>